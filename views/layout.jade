doctype html
html(lang='en-US')
  head
    meta(charset='utf-8')
    title #{title}
    link(rel='shortcut icon',href='/images/favicon.ico',sizes='32x32')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    <!--link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap', rel='stylesheet')-->
    link(rel='stylesheet',href="/stylesheets/style.css")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='/') NodeAuth
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item(class=(title=='Members' ? 'active': ''))
            a.nav-link(href='/')
              | Members
              span.sr-only (current)
          if !user
            li.nav-item(class=(title=='Register' ? 'active': ''))
              a.nav-link(href='/users/register') Register
            li.nav-item(class=(title=='Login' ? 'active': ''))
              a.nav-link(href='/users/login') Login
        ul.nav.navbar-nav.navbar-right
          if user
            li.nav-item
              a.nav-link(href='/users/logout') Logout
    .container
        != messages()
        block content
    script(src='/javascripts/jquery-3.4.1.slim.min.js',defer)
    script(src='/javascripts/bootstrap.js',defer)
